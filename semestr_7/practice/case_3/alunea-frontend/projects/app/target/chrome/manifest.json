{
  "manifest_version": 3,
  "name": "Alunea",
  "version": "1.0",
  "description": "Learn languages while watching your favorite movies and TV shows!",
  "icons": {
    "16": "core/img/logo/transparent/logo-rainbow-1024.png",
    "48": "core/img/logo/transparent/logo-rainbow-1024.png",
    "128": "core/img/logo/transparent/logo-rainbow-1024.png"
  },
  "permissions": ["tabs", "storage", "contextMenus"],
  "host_permissions": ["https://app.alunea.io/*", "https://www.netflix.com/*"],
  "content_scripts": [
    {
      "matches": ["https://app.alunea.io/*", "https://www.netflix.com/*"],
      "js": ["content/main.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "worker/main.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "page/main.js",
      "page/main.js.map",
      "page/main.css",
      "content/main.js",
      "content/main.js.map",
      "content/main.css",
      "core/main.js",
      "core/main.js.map",
      "core/main.css",
      "core/extension-global.css",
      "core/extension-desktop.css",
      "core/extension-mobile.css",
      "core/extension-tablet.css",
      "core/img/sa2.svg",
      "core/img/es.svg",
      "core/img/ir.svg",
      "core/img/pt2.svg",
      "core/img/br.svg",
      "core/img/logo/transparent/logo-rainbow-1024.png",
      "core/img/logo/logo-gray.png",
      "core/img/fox-sad.png"
    ],
    "matches": ["https://app.alunea.io/*", "https://www.netflix.com/*"]
  }],
  "action": {
    "default_popup": "core/index.html"
  }
}
